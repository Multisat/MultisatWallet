<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outline Layer -->
    <item>
        <shape>
            <solid android:color="#000000" /> <!-- Outline color -->
            <corners android:radius="18dp" /> <!-- Corner radius -->
        </shape>
    </item>
    <!-- Content Layer -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape>
            <gradient
                android:type="linear"
                android:startColor="#D84315"
                android:endColor="#993111"
                android:angle="90"/>
            <corners android:radius="18dp" /> <!-- Corner radius -->
        </shape>
    </item>
</layer-list>


